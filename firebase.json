{
  "hosting": {
    "public": "./out",
    "headers": [
      {
        "source": "**/*.@(js)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "max-age=31536000"
          }
        ]
      }
    ],
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**",
      ".gitignore",
      "package.json",
      "package-lock.json",
      "README.md",
      ".eslintrc.json",
      "next.config.js",
      "./src",
      "./pages",
      "./firebase",
      ".env.local"
    ]
  }
}
